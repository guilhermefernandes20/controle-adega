<body>

  <!-- LOGIN -->
  <div id="login" class="card">
    <h2>üç∑ Login - Adega Blend House</h2>
    <input type="text" id="username" placeholder="Usu√°rio">
    <input type="password" id="password" placeholder="Senha">
    <button onclick="login()">Entrar</button>
  </div>

  <!-- APLICATIVO ADEGA -->
  <div id="app">
    <header style="background:#4a0e0e; color:white; text-align:center; padding:15px; font-size:22px;">
      üç∑ Adega Blend House
      <div id="usuarioLogado" style="font-size:16px; margin-top:5px;"></div>
    </header>
    <main style="padding:15px;">

      <!-- ESTOQUE -->
      <section class="card">
        <h2>üì¶ Estoque</h2>
        <input type="text" id="nomeProduto" placeholder="Nome do produto">
        <input type="number" id="quantidadeProduto" placeholder="Quantidade">
        <input type="number" id="precoProduto" placeholder="Pre√ßo (R$)">
        <select id="unidadeProduto">
          <option value="copo">Copo</option>
          <option value="lata">Lata</option>
          <option value="litro">Litro</option>
        </select>
        <button onclick="adicionarProduto()">Adicionar Produto</button>

        <table id="tabelaEstoque">
          <thead>
            <tr>
              <th>Produto</th>
              <th>Qtd</th>
              <th>Pre√ßo</th>
              <th>Unidade</th>
              <th>A√ß√µes</th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </section>

      <!-- VENDAS -->
      <section class="card">
        <h2>üõí Vendas</h2>
        <select id="produtoVenda"></select>
        <input type="number" id="quantidadeVenda" placeholder="Quantidade vendida">
        <button onclick="registrarVenda()">Registrar Venda</button>

        <table id="tabelaVendas">
          <thead>
            <tr>
              <th>Produto</th>
              <th>Qtd</th>
              <th>Unidade</th>
              <th>Total</th>
              <th>A√ß√µes</th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </section>

      <!-- RELAT√ìRIO -->
      <section class="card">
        <h2>üí∞ Relat√≥rio Financeiro</h2>
        <p>Total faturado: <strong id="totalFaturado">R$ 0,00</strong></p>
        <button onclick="logout()" style="background:red; margin-top:10px;">Sair</button>
      </section>
