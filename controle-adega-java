  <script>
    // ---------- CONTROLE DE ACESSO ----------
    const validUsers = ["gabriel", "joao"];
    const validPassword = "adega123";

    function login() {
      const username = document.getElementById("username").value.toLowerCase();
      const password = document.getElementById("password").value;

      if(validUsers.includes(username) && password === validPassword) {
        document.getElementById("login").style.display = "none";
        document.getElementById("app").style.display = "block";
        document.getElementById("usuarioLogado").textContent = "Ol√°, " + username;
      } else {
        alert("Usu√°rio ou senha incorretos!");
      }
    }

    function logout() {
      document.getElementById("login").style.display = "block";
      document.getElementById("app").style.display = "none";
      document.getElementById("username").value = "";
      document.getElementById("password").value = "";
    }

    // ---------- SISTEMA ADEGA ----------
    let estoque = [];
    let vendas = [];
    let totalFaturado = 0;

    function atualizarSelectProdutos() {
      const select = document.getElementById("produtoVenda");
      select.innerHTML = "";
      estoque.forEach((p, i) => {
        let option = document.createElement("option");
        option.value = i;
        option.textContent = `${p.nome} - ${p.unidade} (Qtd: ${p.quantidade})`;
        select.appendChild(option);
      });
    }

    function atualizarTabelaEstoque() {
      const tbody = document.querySelector("#tabelaEstoque tbody");
      tbody.innerHTML = "";
      estoque.forEach((p, i) => {
        let tr = document.createElement("tr");
        tr.innerHTML = `
          <td>${p.nome}</td>
          <td>${p.quantidade}</td>
          <td>R$ ${p.preco.toFixed(2)}</td>
          <td>${p.unidade}</td>
          <td><button class="delete-btn" onclick="excluirProduto(${i})">Excluir</button></td>
        `;
        tbody.appendChild(tr);
      });
      atualizarSelectProdutos();
    }

    function atualizarTabelaVendas() {
      const tbody = document.querySelector("#tabelaVendas tbody");
      tbody.innerHTML = "";
      vendas.forEach((v, i) => {
        let tr = document.createElement("tr");
        tr.innerHTML = `
          <td>${v.nome}</td>
          <td>${v.quantidade}</td>
          <td>${v.unidade}</td>
          <td>R$ ${v.total.toFixed(2)}</td>
          <td><button class="delete-btn" onclick="excluirVenda(${i})">Excluir</button></td>
        `;
        tbody.appendChild(tr);
      });
    }

    function adicionarProduto() {
      const nome = document.getElementById("nomeProduto").value;
      const qtd = parseInt(document.getElementById("quantidadeProduto").value);
      const preco = parseFloat(document.getElementById("precoProduto").value);
      const unidade = document.getElementById("unidadeProduto").value;

      if(!nome || !qtd || !preco) return alert("Preencha todos os campos!");
      estoque.push({ nome, quantidade: qtd, preco, unidade });
      atualizarTabelaEstoque();
      document.getElementById("nomeProduto").value = "";
      document.getElementById("quantidadeProduto").value = "";
      document.getElementById("precoProduto").value = "";
    }

    function excluirProduto(index) {
      estoque.splice(index, 1);
      atualizarTabelaEstoque();
    }

    function registrarVenda() {
      const produtoIndex = document.getElementById("produtoVenda").value;
      const qtd = parseInt(document.getElementById("quantidadeVenda").value);
      if(produtoIndex === "" || !qtd) return alert("Preencha todos os campos!");
      let produto = estoque[produtoIndex];
      if(produto.quantidade < qtd) return alert("Estoque insuficiente!");
      produto.quantidade -= qtd;
      let total = produto.preco * qtd;
      totalFaturado += total;
      vendas.push({ nome: produto.nome, quantidade: qtd, unidade: produto.unidade, total });
      atualizarTabelaEstoque();
      atualizarTabelaVendas();
      document.getElementById("totalFaturado").textContent = "R$ " + totalFaturado.toFixed(2);
      document.getElementById("quantidadeVenda").value = "";
    }

    function excluirVenda(index) {
      let venda = vendas[index];
      totalFaturado -= venda.total;
      let produto = estoque.find(p => p.nome === venda.nome && p.unidade === venda.unidade);
      if(produto) produto.quantidade += venda.quantidade;
      vendas.splice(index, 1);
      atualizarTabelaEstoque();
      atualizarTabelaVendas();
      document.getElementById("totalFaturado").textContent = "R$ " + totalFaturado.toFixed(2);
    }
  </script>
</body>
